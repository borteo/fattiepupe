#main.pure-u
  .content

    = render 'shared/navigation'
    = render 'shared/error'

    %h2 Listing tags
    
    %p#notice= notice

    %p
      %b Author:
      = @post.author
    %p
      %b Title:
      = @post.title
    %p
      %b Tags:
      - @post.tags.each do |tag|
        = tag.name
    %p
      %b Content:
      = @post.content
    %p
      %b Image:
      = image_tag @post.photo

    = link_to 'Edit', edit_post_path(@post)
    \|
    = link_to 'Back', posts_path
