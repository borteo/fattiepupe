!!! 5
- html_tag :class => 'no-js' do
  = render 'head'

  %body{ :class => "#{ controller.controller_name }" }
    = render 'chromeframe'

    #layout.pure-g-r
      / = render 'flashes'
      = render 'header'

      = yield

      = render 'footer'

    -# Javascript at the bottom for fast page loading
    = render 'javascripts'
    
    %script{:src => "/jquery-file-upload/vendor/jquery.ui.widget.js"}
    %script{:src => "/jquery-file-upload/jquery.iframe-transport.js"}
    %script{:src => "/jquery-file-upload/jquery.fileupload.js"}
    - javascript_include_tag "http://gettopup.com/releases/latest/top_up-min.js"
    = yield :js
    = render :partial => 'disqus_counter'