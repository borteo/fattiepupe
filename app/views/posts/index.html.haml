#main.pure-u
  .content

    = render 'shared/navigation'
    = render 'shared/error'

    %h2 Listing posts

    %table.pure-table
      %thead
        %tr
          %th Author
          %th Title
          %th Content
          %th Image
          %th
          %th
          %th

      - @posts.each do |post|
        %tr
          %td= post.author
          %td= link_to post.title, post
          %td= post.content
          %td= image_tag post.photo.url(:thumb), size:"80x107"
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

    = link_to 'New Post', new_post_path
